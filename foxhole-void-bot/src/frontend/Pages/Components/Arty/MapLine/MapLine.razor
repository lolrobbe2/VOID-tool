<svg class="map-line-svg" style="@Style">
    <line x1="@X" y1="@Y" x2="@X2" y2="@Y2"
          stroke="@Color" stroke-width="@StrokeWidth" />
</svg>

@code {
    [Parameter] public double X { get; set; }
    [Parameter] public double Y { get; set; }
    [Parameter] public double X2 { get; set; }
    [Parameter] public double Y2 { get; set; }
    [Parameter] public double scale { get; set; }
    [Parameter] public string Color { get; set; } = "#ff3b3b";

    private double StrokeWidth => 2.0 / scale;

    private string Style =>
        $"position:absolute; left:0; top:0; width:100%; height:100%; pointer-events:none;";
}
