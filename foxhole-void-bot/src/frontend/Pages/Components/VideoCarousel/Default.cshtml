@model List<string> // List of video URLs

<div id="videoBackgroundCarousel">
    @for (int i = 0; i < Model.Count; i++)
    {
        var videoUrl = Model[i];
        <div class="carousel-item @(i == 0 ? "active" : "")" style="display:@(i == 0 ? "block" : "none")">
            <video autoplay muted loop playsinline>
                <source src="@videoUrl" />
                Your browser does not support the video tag.
            </video>
        </div>
    }
</div>
